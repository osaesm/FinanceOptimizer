{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "import/extensions": ["error", "ignorePackages"],
        "no-await-in-loop": "off",
        "no-restricted-syntax": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}